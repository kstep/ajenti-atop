<body>
    <pad id="main">
        <hc>
            <pathbox id="logfile" value="/var/log/atop/atop_20140424" />
            <button text="{Load}" icon="load" style="mini" id="loadlog" />
        </hc>
        <chart
            title="CPU consumtion"
            xaxis="[{
                'type': 'datetime'
            }]"
            yaxis="[{
                'min': 0,
                'max': 100
            }]"
            series="[{
                'name': 'Sys'
            }, {
                'name': 'User'
            }, {
                'name': 'Wait'
            }]"
            width="300"
            height="200"
            bind="cpustats"
            bindtransform="lambda s: map(lambda s: [
                s.epoch * 1000,
                s.sys * 1.0 / s.tps / s.ncpu,
                s.usr * 1.0 / s.tps / s.ncpu,
                s.wait * 1.0 / s.tps / s.ncpu
                ], s)"
            />
    </pad>
</body>
